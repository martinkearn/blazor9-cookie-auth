@page "/clientauthorisedpage"
@rendermode InteractiveWebAssembly
@attribute [Authorize]

<PageTitle>Client Authorised Page</PageTitle>

<h1>Client Authorised Page</h1>

<p>
    <span class="badge text-bg-primary">
        @(RendererInfo.IsInteractive ? "Interactive" : "Not Interactive") (@RendererInfo.Name)
    </span>
</p>

<p>
    <span class="badge text-bg-primary">
        <CascadingAuthenticationState>
            <AuthorizeView>
                <Authorized>Authorized</Authorized>
                <NotAuthorized>Not Authorized</NotAuthorized>
            </AuthorizeView>
        </CascadingAuthenticationState>
    </span>
</p>

<p>This whole page is protected by [Authorize]. If you can access this page, you are authorised.</p>
<p>If you attempt to access this page but are not authorised, you will be redirected to the login page.</p>